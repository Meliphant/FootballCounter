<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c5e1a5"
    android:orientation="vertical"
    tools:context="com.example.android.courtcounter.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:text="Team"
                style="@style/TeamName" />

            <EditText
                android:id="@+id/team_a_name"
                android:hint="@string/hint_enter_name"
                style="@style/TeamNameET" />

            <TextView
                android:id="@+id/team_a_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif-light"
                android:padding="4dp"
                android:text="0"
                android:textColor="#000000"
                android:textSize="56sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/team_a_yellow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#ffea00"
                    android:text="@string/basic_score"
                    style="@style/score_card" />

                <TextView
                    android:id="@+id/team_a_red"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#e53935"
                    android:text="@string/basic_score"
                    style="@style/score_card" />
            </LinearLayout>

            <Button
                android:id="@+id/team_a_yellow_btn"
                android:background="#ffea00"
                android:text="@string/yellow_card"
                style="@style/counter_button" />

            <Button
                android:id="@+id/team_a_red_btn"
                android:background="#e53935"
                android:text="@string/red_card"
                style="@style/counter_button" />

            <Button
                android:id="@+id/team_a_goal_btn"
                android:background="#2e7d32"
                android:text="@string/goal"
                style="@style/counter_button" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/TeamName"
                android:text="Team" />

            <EditText
                android:id="@+id/team_b_name"
                android:hint="@string/hint_enter_name"
                style="@style/TeamNameET" />

            <TextView
                android:id="@+id/team_b_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif-light"
                android:padding="4dp"
                android:text="0"
                android:textColor="#000000"
                android:textSize="56sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/team_b_yellow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#ffea00"
                    android:text="@string/basic_score"
                    style="@style/score_card" />

                <TextView
                    android:id="@+id/team_b_red"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#e53935"
                    android:text="@string/basic_score"
                    style="@style/score_card" />
            </LinearLayout>

            <Button
                android:id="@+id/team_b_yellow_btn"
                android:background="#ffea00"
                android:text="@string/yellow_card"
                style="@style/counter_button" />

            <Button
                android:id="@+id/team_b_red_btn"
                android:background="#e53935"
                android:text="@string/red_card"
                style="@style/counter_button" />

            <Button
                android:id="@+id/team_b_goal_btn"
                android:background="#2e7d32"
                android:text="@string/goal"
                style="@style/counter_button" />
        </LinearLayout>
    </LinearLayout>


    <Button
        android:id="@+id/reset"
        android:background="#bdbdbd"
        android:text="Reset"
        style="@style/reset_button" />

</RelativeLayout>
